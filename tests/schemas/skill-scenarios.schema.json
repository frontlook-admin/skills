{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Skill Scenarios",
  "type": "object",
  "required": ["config", "scenarios"],
  "properties": {
    "config": {
      "type": "object",
      "required": ["model", "max_tokens", "temperature"],
      "properties": {
        "model": {"type": "string"},
        "max_tokens": {"type": "number"},
        "temperature": {"type": "number"}
      },
      "additionalProperties": true
    },
    "scenarios": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "name",
          "prompt",
          "expected_patterns",
          "forbidden_patterns",
          "tags",
          "mock_response"
        ],
        "properties": {
          "name": {"type": "string"},
          "prompt": {"type": "string"},
          "expected_patterns": {
            "type": "array",
            "items": {"type": "string"}
          },
          "forbidden_patterns": {
            "type": "array",
            "items": {"type": "string"}
          },
          "tags": {
            "type": "array",
            "items": {"type": "string"}
          },
          "mock_response": {"type": "string"}
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
